<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <%# ユーザーテンプレート呼び出し %>
    <div class="col-md-12">
      <%= render 'users/template', user: @user%>
    </div>
  </div>
<hr>
  <div class="row">
    <%# 学習時間表示 %>
    <div class="col-md-12">
      <table class="table"  BORDER='2' style="table-layout:fixed;width:100%;" >
        <tbody>
          <tr class="active">
            <td class="active text-center">
              <%= link_to study_times_path(current_user.id) do %>
                <h3><strong>
                  今日 <%= @total_study_time0 %> h
                </strong></h3>
              <% end %>  
            </td>
            <td class="active text-center">
              <%= link_to study_times_path(current_user.id) do %>
                <h3><strong>
                  今週 <%= @week_study_time %>  h
                </strong></h3>
              <% end %>  
            </td>
            <td class="active text-center">
              <%= link_to study_times_path(current_user.id) do %>
                <h3><strong>
                  累計 <%= @all_study_time %> h
                </strong></h3>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= link_to "記録", new_study_time_path(current_user.id), class:"btn btn-success form-control" %>	
    </div>
    <%# 勉強時間グラフ呼び出し、chart.js、event.coffeeに記載 %>
    <div class="col-md-12">
        <canvas id="myChart"></canvas> 
        <script>draw_graph();</script> 
        
    </div>
  </div>

  <hr>

  <div class="row">
    <%# カレンダー、予定一覧 %>
    <div class="col-md-12">
<%
=begin
%>
      <table class="table table-hover table-bordered"  BORDER='2' style="table-layout:fixed;width:100%;" >
        <thead>
          <tr class="active">
            <th>予定</th>
            <th>内容</th>
            <th>開始時間</th>
            <th>終了時間</th>
					<th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td>
                <%= event.title %>
              </td>
              <td>
                <%= event.description %>
              </td>
              <td>
                <%= event.start_date.strftime("%Y/%m/%d %H:%M") %>
              </td>
              <td>
                <%= event.end_date.strftime("%Y/%m/%d %H:%M") %>
              </td>
              <td>
                <strong><%= link_to '詳細', event_path(event.id) %></strong>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
<%
=end
%>

      <%= link_to '新しい予定', new_event_path, class:"btn btn-success form-control" %>	
    </div>

  </div>

  <%# カレンダー呼び出し・application.jsに記述 %>
  <div class="row">
    <div class="col-md-12">
        <div id="calendar" ></div>
    </div>
    <hr>

  </div>
</div>
