<div class="container">
	<%# 教材一覧表示 %>

	<% @textbooks.each do |textbook| %>
        <div class="col-md-4">
						<h3><%= textbook.title %></h3>
						<%= textbook.status %>
						<p><%= textbook.note %></p>
						<%= textbook.tag.name %>
						<strong><%= link_to '詳細', textbook_path(textbook.id) %></strong>
        </div>
    <% end %>

	<br>
	<%# 教材一覧ページネーション %>
	<%= paginate(@textbooks) %>
	<%# 教材追加ボタン %>
	<div class="row">
		<div class="col-md-12">
			<%= link_to '教材を追加', new_textbook_path, class:"btn btn-success form-control" %>	
		</div>
	</div>
</div>
