<div class="jumbotron">
	<div class="container">

		<div class="row">
			<div class="col-md-6 col-xs-offset-0">
				<h2>ユーザー詳細</h2>
			</div>
		</div>


		<div class="field row">
			<%= attachment_image_tag @user, :image, format: 'jpg', fallback: "no-image.gif", size:'250' %>
		</div>

		<div class="table-responsive">
			<table class="table text-nowrap">
				<tbody>
					<tr>
						<td>メールアドレス</td>
						<td> <%= @user.email %> </td>
					</tr>
					<tr>
						<td>姓　名</td>
						<td> <%= @user.last_name %> <%= @user.first_name %> </td>
					</tr>
					<tr>
						<td>セイ　メイ</td>
						<td> <%= @user.kana_last_name %> <%= @user.kana_first_name %> </td>
					</tr>

				</tbody>
			</table>
		</div>

		<div class="row">
			<div class="col-md-12">
				<%= link_to 'Edit', edit_user_path %> | <%= link_to 'Back', events_path %>
			</div>
		</div>

	</div>
</div>