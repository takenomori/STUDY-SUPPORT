<div class="jumbotron">
	<div class="container">
      <%# ユーザー編集画面 %>
			<div class="row">
				<div class="col-md-6 col-md-offset-0">
					<h2>ユーザー編集</h2>
				</div>
			</div>
      <%# フォーム %>
      <%= form_for(@user) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
        <div class="field row">
          <%= attachment_image_tag @user, :image, format: 'jpg', fallback: "no-image.gif", size:'250x250' %>
          <%= f.attachment_field :image, direct: true %>
        </div>
        <div class="field row">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.text_field :email, class: 'col-md-12 user_email' %>
        </div>
        <div class="field row">
          <%= f.label :last_name, '姓' %>
          <%= f.text_area :last_name, class: 'col-md-12 user_last_name'%>
        </div>
        <div class="field row">
          <%= f.label :first_name, '名' %>
          <%= f.text_area :first_name, class: 'col-md-12 user_first_name'%>
        </div>
        <div class="field row">
          <%= f.label :kana_last_name, 'セイ' %>
          <%= f.text_area :kana_last_name, class: 'col-md-12 user_kana_last_name' %>
        </div>
        <div class="field row">
          <%= f.label :kana_first_name, 'メイ' %>
          <%= f.text_area :kana_first_name, class: 'col-xs-md user_kana_first_name' %>
        </div>
        <div class="actions row">
          <%= f.submit class: 'btn btn-primary col-md-12'%>
        </div>
      <% end %>
      <%# 退会ボタン %>
      <div class="row">
        <div class="col-md-3">
          <%= link_to '退会する', @user, method: :delete, data: { confirm: '本当に消しますか？' }, class: " btn btn-default"%>
        </div>
      </div>
	</div>
</div>
