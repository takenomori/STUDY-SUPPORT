<div class="jumbotron">
  <div class="container">
    <h2>新規会員登録</h2>

    <div class="form-horizontal" role="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%# 名前(姓、名)の入力フォーム %>
        <div class="row">
          <div class="form-group">
            <div class="col-xs-3">
              <span><b>名前</b></span>
                <%= f.label :last_name, "　(姓)", style: "float: right;" %>
            </div>

            <div class="col-xs-4">
              <%= f.text_field :last_name, autofocus: true, placeholder: "(例)長野" %>
              <%= f.label :first_name, "　(名)", style: "float: right;" %>
            </div>

            <div class="col-xs-4">
              <%= f.text_field :first_name, placeholder: "(例)慶喜" %>
            </div>
          </div>
        </div>

        <%# フリガナ(セイ、メイ)の入力フォーム %>
        <div class="row">
          <div class="form-group">
            <div class="col-xs-3">
              <span><b>フリガナ</b></span>
                <%= f.label :kana_last_name, "(セイ)", style: "float: right;" %>
            </div>

            <div class="col-xs-4">
              <%= f.text_field :kana_last_name, autofocus: true, placeholder: "(例)ナガノ" %>
              <%= f.label :kana_first_name, "(メイ)", style: "float: right;" %>
            </div>

            <div class="col-xs-4">
              <%= f.text_field :kana_first_name, placeholder: "(例)ケイキ" %>
            </div>
          </div>
        </div>

        <%# メールアドレスの入力フォーム %>
        <div class="row">
          <div class="form-group">
            <div class="col-xs-3">
              <%= f.label :email, "メールアドレス" %>
            </div>
            <div class="col-xs-4">
              <%= f.email_field :email, placeholder: "(例)nagano_cake@example.com" %>
            </div>
          </div>
        </div>

        <%# パスワードの入力フォーム %>
        <div class="row">
          <div class="form-group">
            <div class="col-xs-3">
              <%= f.label :password, "パスワード(6文字以上)" %>
            </div>
            <div class="col-xs-4">
              <%= f.password_field :password, placeholder: "パスワード" %>
            </div>
          </div>
        </div>

        <%# パスワード(確認用)の入力フォーム %>
        <div class="row">
          <div class="form-group">
            <div class="col-xs-3">
              <%= f.label :password_confirmation, "パスワード(確認用)" %>
            </div>
            <div class="col-xs-4">
              <%= f.password_field :password_confirmation, placeholder: "パスワード確認用" %>
            </div>
          </div>
        </div>
        <br>

        <%# 「新規登録」ボタン %>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-5">
            <div class="actions">
              <%= f.submit "Sign up", value: "新規登録", class: "btn btn-success btn-block" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>


    <%# deviseの仕様で、以下のレンダーでログインページへのリンクを表示している %>
    <%= render "devise/shared/links" %>
  </div>
</div>
